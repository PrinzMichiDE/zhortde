{
  "manifest_version": 3,
  "name": "Zhort - URL Shortener",
  "version": "1.0.0",
  "description": "Shorten your current tab URL instantly with Zhort.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shorten URL"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
